<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>WEB-INF/beans.xml</param-value>
    </context-param>
    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>
    <servlet>
        <servlet-name>CXFServlet</servlet-name>
        <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>CXFServlet</servlet-name>
        <url-pattern>/web/*</url-pattern>
    </servlet-mapping>
    <resource-ref>
        <description>xdtoservices</description>
        <res-ref-name>jdbc/xdtoservices</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <!-- uncomment for xslt support, see also beans.xml for uriResolver and xsltProvider
    To make xslt templates refresh on the fly, you need yo override variable refreshTemplates
    in local ${catalina.base}/conf/context.xml with value "true", example:
    <Environment name="refreshTemplates" value="true" type="java.lang.Boolean" override="false"/>
    Also checkbox "Copy Static Resources On Save" should be enabled in project options in Netbeans ("Run" tab).

    <env-entry>
        <description>reload xslt templates on every request</description>
        <env-entry-name>refreshTemplates</env-entry-name>
        <env-entry-type>java.lang.Boolean</env-entry-type>
        <env-entry-value>false</env-entry-value>
    </env-entry>
    -->
    <!-- uncomment for resource link
    <resource-env-ref>
        <description>workflow resource</description>
        <resource-env-ref-name>ru.bystrobank.apps.workflow.ws</resource-env-ref-name>
        <resource-env-ref-type>javax.jms.Queue</resource-env-ref-type>
    </resource-env-ref>
    -->
    <env-entry>
        <env-entry-name>oce.driver</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>
    <env-entry>
        <env-entry-name>oce.host</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>
    <env-entry>
        <env-entry-name>oce.domain</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>
    <env-entry>
        <env-entry-name>oce.host.user</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>
    <env-entry>
        <env-entry-name>oce.host.password</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>
    <env-entry>
        <env-entry-name>oce.1c.dbpath</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>
    <env-entry>
        <env-entry-name>oce.1c.user</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>
    <env-entry>
        <env-entry-name>oce.1c.password</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>

</web-app>
